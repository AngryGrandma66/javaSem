<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.game.javasem.controllers.PauseMenuController"
      alignment="CENTER" spacing="15"
      prefWidth="400" prefHeight="300"
      style="-fx-background-color: rgba(0,0,0,0.8); -fx-padding: 20;">
    <Text text="Paused" style="-fx-font-size:24px; -fx-fill: white;" />
    <Button text="Resume" fx:id="resumeButton" onAction="#handleResume" prefWidth="200"/>
    <Button text="Save Game" fx:id="saveButton" onAction="#handleSave" prefWidth="200"/>
    <Button text="Exit to Menu" fx:id="exitButton" onAction="#handleExit" prefWidth="200"/>
</VBox>