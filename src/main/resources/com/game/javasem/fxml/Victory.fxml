<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.game.javasem.controllers.VictoryController"
           prefWidth="1280" prefHeight="720">
    <!-- Background image at bottom of the stack -->
    <ImageView fitWidth="1280" fitHeight="720" preserveRatio="false">
        <Image url="@../images/victory.png"/>
    </ImageView>

    <!-- Overlay UI centered on top -->
    <VBox alignment="CENTER" spacing="20">
        <Text text="Victory!" style="-fx-font-size: 48px; -fx-fill: green; -fx-stroke: black; -fx-stroke-width: 2;"/>
        <Button text="Main Menu" fx:id="mainMenuButton" onAction="#handleMainMenu"/>
    </VBox>
</StackPane>